{
    "title": "Dashboard Settings",
    "type": "object",
    "id": "dashboard-settings",
    "format": "tab",
    "properties": {

        "generalRefresh": {
            "type": "integer",
            "default": 1000,
            "required": true,
            "description": "General Refresh (ms)"
        },
        "maxNodesPerPage": {
            "type": "integer",
            "default": 10,
            "description": "Max number of Nodes per page"
        },
        "defaultZone": {
            "type": "string",
            "default": "ALL",
            "description": "Default Zone to open"
        },
        "defaultGroup": {
            "type": "string",
            "default": "ALL",
            "description": "Default Group to open"
        },
        "defaultInterface": {
            "type": "string",
            "default": "ALL",
            "description": "Default Interface to open"
        },
        "generalControlRefresh": {
            "type": "integer",
            "default": 500,
            "description": "Default General Refresh when in control (ms)"
        },
        "defaultPage": {
            "type": "integer",
            "default": 1000,
            "description": "Default History Page"
        },
        "checkLive": {
            "type": "integer",
            "default": 10000,
            "description": "Live Check Refresh (ms)"
        },
        "defaultRestTimeout": {
            "type": "integer",
            "default": 10000,
            "required": true,
            "description": "Default Timeout Rest operation (ms)"
        },
        "defaultRestPort": {
            "type": "integer",
            "default": 8081,
            "description": "Default Rest Port"
        },
        "defaultIOPort": {
            "type": "integer",
            "default": 4000,
            "description": "Default SocketIO port"
        },
        "camera": {
            "$ref": "../camera-settings.json",
            "title": "Camera Settings",
            "required": true
        }
    }
}