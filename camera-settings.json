{
    "title": "Camera Settings",
    "type": "object",
    "id": "camera-settings",
    "format": "tab",
    "properties": {
        "cameraRefresh": {
            "type": "integer",
            "default": 1000,
            "required": true,
            "description": "Camera Refresh (ms)"
        },
        "cameraStream": {
            "type": "boolean",
            "default": false,
            "required": true,
            "description": "Use direct http stream if available"
        },
        "cameraPerRow": {
            "type": "integer",
            "default": 2,
            "required": true,
            "description": "Number Of Cameras per row"
        },
        "maxCameraRow": {
            "type": "integer",
            "default": 2,
            "required": true,
            "description": "Number of camera rows"
        },
        
        "displayRatio": {
            "type": "string",
            "default": "4/3",
            "required": true,
            "description": "width/height"
        },
        "restTimeout": {
            "type": "integer",
            "default": 6000,
            "required": true,
            "description": "Timeout of Rest ops (ms)"
        },

        "debug": {
            "type": "boolean",
            "default": false,
            "required": true,
            "description": "Debug info displayed"
        }

    }
}