{
  "title": "Script",
  "type": "object",
  "id": "editor-algo",
  "format": "tab",
  "properties": {
    "script_name": {
      "type": "string",
      "required": true,
      "format": "text",
      "description": "Unique Identifier of the Algorithm"
    },
    "eudk_script_language": {
      "type": "array",
      "format": "select",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "enum": ["BASH", "CPP", "NODEJS","JS", "LUA", "PYTHON"]
      }
    },
	"script_group": {
    "type": "array",
    "format": "select",
    "uniqueItems": true,
    "items": {
      "type": "string",
      "enum": []
    },
	    "description":"Group name"
	},
	"script_target" :
	{
		"type": "array",
  		"format": "select",
  		"uniqueItems": true,
  		"items": {
    	"type": "string",
		  "enum": ["local","remote"]
      },
      "description":"Run locally (i.e browser) or Remote (i.e cloud)"

  },
    "eudk_script_content": {
      "type": "string",
      "format": "textarea",
      "description": "Script code"
    },
    "eudk_script_keepalive": {
      "type": "boolean",
      "default": false,
      "description": "Restart in case of unexpected exit"
    },

    "eudk_script_cmdline": {
      "type": "string",
      "format": "text",
      "description": "Command Line (if any)"
    },
    "cudk_ds_desc": {
      "type": "array",
      "format": "tab",
      "title": "Dataset Description",
      "items": {
        "$ref": "algo-port.json",
        "title": "Port description"
      }
    },
    "script_description": {
      "type": "string",
      "format": "text",
      "description": "Full Description"
    },
    "default_argument": {
      "type": "string",
      "format": "text",
      "description": "Default/last command argument"
    },
    "seq": {
      "type": "integer",
      "description": "identifier id/creation epoch, (assigned the EPOC(ms))"
    }
  }
}